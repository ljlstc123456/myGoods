/**index.wxss**/
.index-container{
  padding:20rpx 50rpx;
}
.h2{
  display: block;
  font-size:18px;
  font-weight: bold;
}
.info{
  display: block;
  margin-top:10px;
  font-size: 14px;
  line-height: 20px;
  color:#555;
}
.title{
  padding:10px 30rpx 0;
  line-height: 30px;
}
.title image{
  width:30px;
  height:30px;
  vertical-align: middle;
}
.title .name{
  font-size: 14px;
  vertical-align: middle;
  margin-left: 10px;
  color:#999;
}
.title .detail{
  display: block;
  line-height: 25px;
  font-size: 14px;
  color:#666;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  padding-left:10px;
  border-bottom: 1rpx solid #efefef;
}
.title .detail:active{
  background: #efefef;
}
.img-list{
  display: flex;
  margin-top:10px;
  flex-wrap:  wrap ;
  padding:0 5px;
}
.img-list view{
  box-sizing: border-box;
  width:50%;
  flex:0 0 50%;
  padding:0 5px;
  margin-bottom: 10px;
}
.img-list view image{
  width:100%;
  height:90px;
}